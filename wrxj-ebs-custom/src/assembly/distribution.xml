<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.1.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.1.1 http://maven.apache.org/xsd/assembly-2.1.1.xsd">
  <id>distribution</id>

  <!-- Set to false so that we can unpack to any directory that we want -->
  <includeBaseDirectory>false</includeBaseDirectory>
  <formats>
    <format>zip</format>
  </formats>
  <fileSets>
    <fileSet>
      <directory>${project.basedir}/bin</directory>
      <outputDirectory>${project.version}/bin</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/configs</directory>
      <outputDirectory>${project.version}/configs</outputDirectory>
      <excludes>
        <exclude>yajsw/*</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <outputDirectory>${project.version}/logs</outputDirectory>
      <excludes>
        <exclude>**/*</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/../share/tools/yajsw</directory>
      <outputDirectory>${project.version}/tools/yajsw</outputDirectory>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <source>${project.basedir}/configs/yajsw/wrapper.conf</source>
      <outputDirectory>${project.version}/tools/yajsw/conf</outputDirectory>
    </file>
  </files>
  <dependencySets>
    <dependencySet>
      <outputDirectory>${project.version}/lib</outputDirectory>
    </dependencySet>
  </dependencySets>
</assembly>